@model IEnumerable<PalestraMVC.Models.Automobile>

@{
    ViewBag.Title = "Index";
    var SommaTotale = Model.Sum(automobile => automobile.PrezzoAcquisto);
}


<h2>Lista di automobili</h2>

<p>
    @Html.ActionLink("Crea nuova", "Create")
</p>
<table class="table table-hover table-bordered table-striped table-responsive" >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Targa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Proprietario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrezzoAcquisto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Modello)
        </th>
        <th>Azioni</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Targa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Proprietario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrezzoAcquisto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Modello)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Dettagli", "Details", new {  id=item.Targa }) |
            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
        </td>
    </tr>
}

</table>
<h3>@SommaTotale</h3>
@section footer{<footer>
    <p>Footer di automobili @DateTime.Now.Year - Avanade Application</p>
</footer>}
